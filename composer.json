{
  "name": "purepressurelive/site",
  "type": "project",
  "require": {
    "php": "^8.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.13",
    "friendsofphp/php-cs-fixer": "^3.89",
    "phpstan/phpstan": "^1.12",
    "phpunit/phpunit": "^11.5"
  },
  "autoload": { "psr-4": { "App\\": "src/" } },
  "scripts": {
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes && vendor/bin/phpcbf -q",
    "fix": "@format",
    "lint": "vendor/bin/php-cs-fixer fix --dry-run --diff && vendor/bin/phpcs -q -n",
    "analyze": "vendor/bin/phpstan analyse --memory-limit=512M",
    "test": "vendor/bin/phpunit --colors=never"
  }
}
